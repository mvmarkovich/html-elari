extends layouts/layout.pug

block title
    title Catalog | Elari

block breadcrumbs
    block breadcrumbs
    .breadcrumbs
        .container.breadcrumbs__container
            ul.breadcrumbs__list
                li.breadcrumbs__item
                    a.breadcrumbs__link(href="./") Главная

                li.breadcrumbs__item
                    a.breadcrumbs__link(href="catalog.html") Детские часы

                li.breadcrumbs__item
